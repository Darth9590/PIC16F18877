#include <stdio.h>
#include <stdint.h>

void main(){

  uint8_t col;

  scanf("%hhu", &col);
  printf("You entered %X", col);

 // Lower nibble between 0x00 to 0x0F
  uint8_t lower_nibble = (col & 0x0F);
  printf("Lower nibble is: %X", lower_nibble);
  uint8_t upper_nibble = (col & 0xF0);
  printf("Upper nibble is: %X", upper_nibble);

 // Upper nibble between 0x10 to 0x1F
 //

}
